.col-xs-offset-2.col-sm-offset-2.col-md-offset-2.col-lg-offset-2.col-xs-6
	%h3{class: 'text-center'} Post New Location for the Photos 
	%hr
	=form_for @location do |f|
       
		.form-group
			=f.label :address, "Name of Place Photo Taken"
			=f.text_field :address, placeholder: 'example: New York, U.S.A or famous place/statue of Liberty', class: 'form-control'
		.form-group
			=f.label :description
			=f.text_area :description,placeholder: 'Say something about the photos', class: 'form-control'
		=f.submit "Post Location", class: 'btn btn-primary btn-block'