- provide(:title, "Reply")
%h4{class: 'text-center page-header'}Reply
= form_for @post do |f|
	=render 'shared/error_messages', object: f.object
	.form-group
		-# =f.label :content , nil
		=f.hidden_field :parent_id 
		=f.hidden_field :photo_id, :value =>  "#{!params[:id].nil? ? params[:id] : session[:photo_id]}"
		%br
		=f.text_area(:content,cols: 4,class: 'form-control',rows: 8,placeholder:'Compose new comment.....')
	=f.submit "Post", class: 'btn btn-primary btn-block'

 