-provide(:title, 'sign up')
.row
  .col-xs-offset-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4.col-xs-4
    %h2{class: 'text-center'} Sign up
    %hr
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'form-horizontal'}) do |f|
      -# = devise_error_messages!
      = f.input :first_name
      = f.input :last_name 
      = f.input :email 
      = f.input :password
      = f.input :password_confirmation
      .form-group 
        = f.button :button, class: 'btn btn-primary btn-block' do 
          %span{class: "glyphicon glyphicon-user reg-user", aria: {hidden: "true"}} 
          Sign up
    = render "devise/shared/links"
