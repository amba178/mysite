%h2{class: 'text-center'} Resend confirmation instructions
%hr 
= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f|
	=f.input :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) 

	.form-group 
		= f.button :submit, "Resend confirmation instructions", class: 'btn btn-primary btn-block' 

= render "devise/shared/links"
