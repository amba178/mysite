.row
  .col-xs-offset-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4.col-xs-4
    %h2{class: 'text-center'} Sign up
    %hr
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group 
        = f.label :first_name
        = f.text_field :first_name, class: 'form-control has-error'
      .form-group 
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control has-error'
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control'
      .form-group
        = f.label :password
        = f.password_field :password, class: 'form-control'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: 'form-control'
      .form-group 
        = f.button  class: 'btn btn-primary btn-block' do 
          %span{class: "glyphicon glyphicon-user", aria: {hidden: "true"}} 
          Sign up
    = render "devise/shared/links"
