-provide(:title, 'profile')
.row
	.col-xs-offset-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4.col-xs-4
		%h3{class: 'text-center'} #{@user.first_name}, #{@user.last_name} Profile
		%hr 

		%ul 
			%li First name: #{@user.first_name}
			%li Last  name: #{@user.last_name} 
			%li Nickname: #{@user.nickname}
			%li Status: registered user
			%li Contribution as current time: $ 0.00 
			%li 
				#{@user.provider} link: 
				=link_to @user.provider , "https://#{@user.provider}.com/#{@user.nickname}" 

