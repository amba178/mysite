-provide(:title, 'Log in page')
.row
  .col-xs-offset-4.col-sm-offset-4.col-md-offset-4.col-lg-offset-4.col-xs-4

    %h2{class: 'text-center'} Log in
    %hr 
    = form_for(resource, as: resource_name, url: session_path(resource_name))  do |f|
      .form-group.has-feedback.has-feedback-left
        = f.label :email, class: 'control-label'
        = f.email_field :email, class: 'form-control', placeholder: "Enter your email"
        %i.glyphicon.glyphicon-user.form-control-feedback

      .form-group.has-feedback.has-feedback-left
        = f.label :password, class: 'control-label'
        = f.password_field :password, class: 'form-control', placeholder: "Enter your password"
        %i.glyphicon.glyphicon-lock.form-control-feedback
        
      
      - if devise_mapping.rememberable?
        .button-group
          = f.button class: 'btn btn-primary btn-block' do 
            %span{ class: "glyphicon glyphicon-log-in", aria: {hidden: "true"}}
            Log in

      .form-group
        = f.check_box :remember_me
        = f.label :remember_me

    = render "devise/shared/links"
